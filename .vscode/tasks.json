		{
			"type": "shell",
            "label": "Debug Build Task",
            "command": "${workspaceFolder}/task_4/scripts/build.sh",
            "windows": {
                "command": "${workspaceFolder}/task_4/scripts/build.bat",
                "args": [
                    "windows",
                    "debug"
                ]
            },
            "linux": {
                "args": [
                    "linux",
                    "debug"
                ]
            },
            "osx": {
                "args": [
                    "macos",
                    "debug"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
		{
			"type": "shell",
            "label": "Release Build Task",
            "command": "${workspaceFolder}/task_4/scripts/build.sh",
            "windows": {
                "command": "${workspaceFolder}/task_4/scripts/build.bat",
                "args": [
                    "windows",
                    "release"
                ]
            },
            "linux": {
                "args": [
                    "linux",
                    "release"
                ]
            },
            "osx": {
                "args": [
                    "macos",
                    "release"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
